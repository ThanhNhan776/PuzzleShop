@inherits PuzzleShop.Client.Pages.Home.Logic.NewProductsLogic

@if (ToyList != null) {
    <section id="new-products" class="page-section row">
        <h2 class="section-title"><span>What's New</span></h2>

        <div id="product-carousel" class="col-xs-12 owl-carousel owl-theme row" style="display: block; opacity: 1;">

            <div class="owl-wrapper-outer">
                <div class="owl-wrapper" style="display: block; width: 2256px; left: 0px; transition: all 0ms ease; transform: translate3d(0px, 0px, 0px);">
                    @foreach (var toy in ToyList) {
                        <div class="owl-item" style="width: 10%;">
                            <div class="product-holder">
                                <form class="custom" onsubmit="return false">
                                    <div class="product-item text-center">
                                        <a class="product-img" href="/toyDetail/@toy._id">
                                            <img class="img-responsive" src="@toy.PhotoURL" alt="@toy.ToyName" />
                                        </a>
                                        <h3 class="product-title">
                                            <a href="/toyDetail/@toy._id">@toy.ToyName</a>
                                        </h3>
                                        <div class="h4 product-price">
                                            @*<span class="previous-price">$@toy.Price.ToString("N")</span>
                                                <div class="sale-tag">
                                                        Sale!
                                                    </div>*@
                                            <span>$@toy.Price.ToString("N")</span>
                                        </div>
                                        <div class="buttons-holder">
                                            <a class="btn btn-default btn-quick-view hidden-xs" rel="tooltip" title="Quick View" href="/toyDetail/@toy._id"><i class="fa fa-eye"></i></a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    }


                </div>
            </div>
            @*
                <div class="owl-controls">
                    <div class="owl-pagination">
                        <div class="owl-page"><span class=""></span></div>
                        <div class="owl-page active"><span class=""></span></div>
                    </div>
                    <div class="owl-buttons">
                        <div class="owl-prev fa fa-angle-left"></div>
                        <div class="owl-next fa fa-angle-right"></div>
                    </div>
                </div>*@
        </div>
    </section>
}