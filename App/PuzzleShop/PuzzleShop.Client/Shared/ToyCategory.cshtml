@inherits PuzzleShop.Client.Shared.Logic.ToyCategoryLogic

@if (Category != null) {
    <h4>Categories</h4>
    <ul class="list-unstyled  categories-group ">
        @foreach (var category in Category) {
            <li>
                <a href="#" class="" onclick="@(() => FilterByCategory(category.Key))">
                    <span class="badge">@category.Value</span>
                    @category.Key
                </a>
            </li>
        }
    </ul>
}